<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/article_padding_vertical"
            android:layout_marginRight="@dimen/article_padding_vertical"
            android:layout_marginStart="@dimen/article_padding_vertical"
            android:layout_marginLeft="@dimen/article_padding_vertical"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/AppText.Article.Detail"
            tools:text="Author" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/article_padding_vertical"
            android:layout_marginRight="@dimen/article_padding_vertical"
            android:layout_marginStart="@dimen/article_padding_vertical"
            android:layout_marginLeft="@dimen/article_padding_vertical"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/AppText.Article.Detail"
            tools:text="Date" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/article_padding_vertical"
            android:layout_marginRight="@dimen/article_padding_vertical"
            android:layout_marginStart="@dimen/article_padding_vertical"
            android:layout_marginLeft="@dimen/article_padding_vertical"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/AppText.Article.Title"
            tools:text="Article Title" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="@dimen/article_padding_vertical"
            android:layout_marginStart="@dimen/article_padding_vertical"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/AppText.Article.Body"
            tools:text="Article Description" />

    </LinearLayout>
</android.support.v7.widget.CardView>