<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="actionBarStyle">@style/AppActionbar</item>
        <item name="android:actionBarStyle">@style/AppActionbar</item>
        <item name="actionBarTheme">@style/AppTheme.Actionbar</item>
    </style>

    <style name="AppTheme.Actionbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/AppActionbar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppText.Article.Title" parent="TextAppearance.AppCompat.Large" />

    <style name="AppText.Article.Body" parent="TextAppearance.AppCompat.Medium" />

    <style name="AppText.Article.Detail" parent="TextAppearance.AppCompat.Small" />

    <style name="AppActionbar">
        <item name="android:background">@color/actionbarBackground</item>
        <item name="background">@color/actionbarBackground</item>
    </style>

</resources>
